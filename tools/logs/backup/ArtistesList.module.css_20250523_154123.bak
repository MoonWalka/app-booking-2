/*
 * Styles pour ArtistesList
 * Standardisé selon le Guide de Style CSS de TourCraft
 * Date de création: Inconnue
 * Dernière mise à jour: 5 mai 2025
 */


.artistesMobileContainer {
  padding: var(--tc-spacing-3);
  background-color: var(--tc-bg-color);
}

.mobileHeaderContainer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: var(--tc-spacing-4);
  padding-bottom: var(--tc-spacing-2);
  border-bottom: 1px solid var(--tc-border-color);
}

.mobileHeaderContainer h1 {
  font-size: 1.75rem;
  font-weight: var(--tc-font-weight-semibold);
  color: var(--tc-text-color);
  margin: 0;
}

.mobileAddBtn {
  width: 2.5rem;
  height: 2.5rem;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: var(--tc-font-size-xl);
  padding: 0;
}

.mobileSearchContainer {
  margin-bottom: var(--tc-spacing-3);
  position: relative;
}

.mobileFiltersContainer {
  display: flex;
  gap: var(--tc-spacing-2);
  overflow-x: auto;
  padding-bottom: var(--tc-spacing-2);
  margin-bottom: var(--tc-font-size-xl);
  -webkit-overflow-scrolling: touch;
  scrollbar-width: none; /* Pour Firefox */
}

.mobileFiltersContainer::-webkit-scrollbar {
  display: none; /* Pour Chrome, Safari et Opera */
}

.filterPill {
  padding: var(--tc-spacing-2) var(--tc-spacing-3);
  background-color: var(--tc-border-radius);
  border: 1px solid var(--tc-border-radius);
  border-radius: var(--tc-spacing-8);
  white-space: nowrap;
  font-size: 0.875rem;
  cursor: pointer;
  transition: all 0.2s ease;
}

.filterPill.active {
  background-color: var(--tc-border-radius);
  color: var(--tc-bg-default);
  border-color: var(--tc-border-radius);
}

.mobileArtistesGrid {
  display: grid;
  grid-template-columns: 1fr;
  gap: var(--tc-spacing-3);
}

.artisteCardMobile {
  background-color: var(--tc-bg-color);
  border-radius: var(--tc-border-radius);
  overflow: hidden;
  box-shadow: 0 2px 4px var(--tc-color-rgba(0, 0, 0, 0.05), rgba(0, 0, 0, 0.05));
  transition: all 0.3s ease;
  cursor: pointer;
}

.artisteCardMobile:hover {
  box-shadow: 0 4px 8px var(--tc-color-rgba(0, 0, 0, 0.1), rgba(0, 0, 0, 0.1));
  transform: translateY(-2px);
}

.artisteCardHeader {
  position: relative;
  height: 120px;
  background-color: var(--tc-border-radius);
  overflow: hidden;
}

.artisteCardHeader img {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.placeholderPhotoMobile {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: var(--tc-border-radius);
  color: var(--tc-border-radius);
}

.placeholderPhotoMobile i {
  font-size: var(--tc-spacing-8);
  opacity: 0.5;
}

.artisteBadgesMobile {
  position: absolute;
  top: var(--tc-spacing-2);
  right: var(--tc-spacing-2);
  display: flex;
  gap: var(--tc-spacing-1);
}

.badgeMobile {
  padding: var(--tc-spacing-1) var(--tc-spacing-2);
  border-radius: var(--tc-spacing-3);
  font-size: var(--tc-spacing-2);
  font-weight: var(--tc-font-weight-semibold);
}

.badgeConcerts {
  background-color: var(--tc-border-radius);
  color: var(--tc-bg-default);
}

.artisteCardContent {
  padding: var(--tc-spacing-3);
}

.artisteCardContent h3 {
  margin: 0 0 var(--tc-spacing-2) 0;
  font-size: 1.var(--tc-spacing-3);
  font-weight: var(--tc-font-weight-semibold);
  color: var(--tc-border-radius);
}

.genre {
  color: var(--tc-border-radius);
  font-size: 0.875rem;
  margin-bottom: var(--tc-spacing-2);
}

.artisteActionsMobile {
  display: flex;
  justify-content: flex-end;
  gap: var(--tc-spacing-2);
  margin-top: var(--tc-spacing-2);
}

.actionBtn {
  width: var(--tc-spacing-8);
  height: var(--tc-spacing-8);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  border: none;
  cursor: pointer;
  transition: all 0.2s ease;
}

.actionBtn.view {
  background-color: var(--tc-info-color);
  color: var(--tc-bg-default);
}

.actionBtn.edit {
  background-color: var(--tc-warning-color);
  color: var(--tc-bg-default);
}

.actionBtn.delete {
  background-color: var(--tc-border-radius);
  color: var(--tc-bg-default);
}

.emptyStateMobile {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 3rem var(--tc-spacing-3);
  text-align: center;
}

.emptyStateMobile i {
  font-size: 3rem;
  color: var(--tc-border-radius);
  margin-bottom: var(--tc-spacing-3);
  opacity: 0.5;
}

.loadMoreContainerMobile {
  display: flex;
  justify-content: center;
  margin-top: var(--tc-spacing-4);
  padding-bottom: var(--tc-spacing-4);
}

.loadMoreBtnMobile {
  width: 3rem;
  height: 3rem;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0;
  font-size: var(--tc-spacing-4);
}

/* Mobile ArtistesList.module.css */
.mobileHeader {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: var(--tc-spacing-3);
}

.pageTitle {
  font-size: var(--tc-spacing-4);
  font-weight: var(--tc-font-weight-semibold);
  margin: 0;
}

.addButton {
  width: 40px;
  height: 40px;
  border-radius: 50%;
  padding: 0;
  display: flex;
  align-items: center;
  justify-content: center;
}

.statsRow {
  display: flex;
  justify-content: space-between;
  margin-bottom: var(--tc-spacing-3);
  background-color: var(--tc-bg-light);
  border-radius: var(--tc-spacing-2);
  padding: var(--tc-spacing-2) var(--tc-spacing-2);
}

.statItem {
  text-align: center;
  flex: 1;
}

.statValue {
  font-size: var(--tc-font-size-xl);
  font-weight: var(--tc-font-weight-bold);
  color: var(--tc-color-primary);
}

.statLabel {
  font-size: var(--tc-spacing-2);
  color: var(--tc-color-text-secondary);
}

.searchFilterContainer {
  margin-bottom: var(--tc-spacing-3);
}

.searchContainer {
  position: relative;
}

.mobileSearchDropdown {
  position: absolute;
  left: 0;
  right: 0;
  top: 100%;
  background-color: var(--tc-bg-default);
  border: 1px solid var(--tc-color-border-light);
  border-radius: 0.375rem;
  z-index: 1000;
  box-shadow: 0 var(--tc-spacing-2) var(--tc-spacing-3) var(--tc-color-rgba(0, 0, 0, 0.15), rgba(0, 0, 0, 0.15));
  max-height: 300px;
  overflow-y: auto;
}

.searchResultItem {
  display: flex;
  align-items: center;
  padding: var(--tc-spacing-2) var(--tc-spacing-3);
  text-decoration: none;
  color: var(--tc-text-color);
  border-bottom: 1px solid var(--tc-text-color);
}

.searchResultAvatar {
  width: 36px;
  height: 36px;
  border-radius: 50%;
  overflow: hidden;
  margin-right: var(--tc-spacing-2);
  flex-shrink: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: var(--tc-text-color);
}

.searchCreateItem {
  padding: var(--tc-spacing-2) var(--tc-spacing-3);
  cursor: pointer;
  color: var(--tc-color-primary);
  background-color: var(--tc-color-rgba(13, 110, 253, 0.05), rgba(13, 110, 253, 0.05));
}

.sortButtons {
  display: flex;
  gap: var(--tc-spacing-2);
  flex-wrap: wrap;
}

.artistesList {
  display: flex;
  flex-direction: column;
  gap: var(--tc-spacing-3);
}

.artisteCard {
  border: none;
  box-shadow: 0 2px 4px var(--tc-color-rgba(0, 0, 0, 0.05), rgba(0, 0, 0, 0.05));
}

.artisteHeader {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: var(--tc-spacing-2);
}

.artisteInfo {
  display: flex;
  align-items: center;
}

.artisteAvatar {
  width: 48px;
  height: 48px;
  border-radius: 50%;
  overflow: hidden;
  margin-right: var(--tc-spacing-2);
  flex-shrink: 0;
}

.artisteAvatar img {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.placeholderAvatar {
  width: 100%;
  height: 100%;
  background-color: var(--tc-text-color);
  display: flex;
  align-items: center;
  justify-content: center;
  color: var(--tc-color-text-secondary);
}

.artisteName {
  font-size: var(--tc-font-size-lg);
  font-weight: var(--tc-font-weight-semibold);
  margin: 0 0 var(--tc-spacing-1);
  display: flex;
  align-items: center;
}

.artisteGenre {
  font-size: 0.875rem;
  color: var(--tc-color-text-secondary);
}

.concertsBadge {
  font-size: var(--tc-spacing-2);
  padding: 0.35rem var(--tc-spacing-2);
  display: flex;
  align-items: center;
  gap: var(--tc-spacing-1);
}

.artisteDetails {
  border-top: 1px solid var(--tc-text-color);
  border-bottom: 1px solid var(--tc-text-color);
  padding: var(--tc-spacing-2) 0;
  margin-bottom: var(--tc-spacing-2);
}

.artisteDetail {
  display: flex;
  align-items: center;
  margin-bottom: var(--tc-spacing-2);
  font-size: 0.875rem;
}

.artisteDetail:last-child {
  margin-bottom: 0;
}

.artisteDetail i {
  margin-right: var(--tc-spacing-2);
  width: 16px;
  text-align: center;
}

.artisteActions {
  display: flex;
  justify-content: flex-end;
  gap: var(--tc-spacing-2);
}

.actionButton {
  width: 36px;
  height: 36px;
  padding: 0;
  display: flex;
  align-items: center;
  justify-content: center;
}

.loadMoreButton {
  margin: var(--tc-spacing-3) auto;
  display: flex;
  align-items: center;
  padding: var(--tc-spacing-2) var(--tc-spacing-4);
}

.emptyCard {
  border: none;
  box-shadow: 0 2px 4px var(--tc-color-rgba(0, 0, 0, 0.05), rgba(0, 0, 0, 0.05));
}