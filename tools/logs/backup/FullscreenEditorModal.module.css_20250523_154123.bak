/*
 * Styles pour FullscreenEditorModal
 * Standardisé selon le Guide de Style CSS de TourCraft
 * Dernière mise à jour: 16 May 2025
 */

/* src/components/contrats/FullscreenEditorModal.module.css */

.modalOverlay {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: var(--tc-color-rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0.5));
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1050;
}

.modalContent {
  width: 100%;
  height: 100vh;
  max-width: none;
  margin: 0;
  background: white;
  border-radius: 0;
  box-shadow: none;
  display: flex;
  flex-direction: column;
  overflow: hidden;
}

.modalHeader {
  padding: 15px 20px;
  border-bottom: 1px solid var(--tc-border-color);
  display: flex;
  align-items: center;
  justify-content: space-between;
  background-color: var(--tc-primary-color);
  color: white;
}

.modalHeader h3 {
  margin: 0;
  font-size: 1.25rem;
  font-weight: 600;
}

.modalBody {
  flex: 1;
  overflow-y: auto;
  padding: 0;
}

.quillEditorWrapper {
  height: 100%;
  display: flex;
  flex-direction: column;
}

.quillEditorWrapper :global(.quill) {
  display: flex;
  flex-direction: column;
  height: 100%;
}

.quillEditorWrapper :global(.ql-container) {
  flex: 1;
  overflow-y: auto;
}

.quillEditorWrapper :global(.ql-toolbar) {
  position: sticky;
  top: 0;
  z-index: 10;
  background: white;
  border-bottom: 1px solid var(--tc-color-ccc, #ccc);
}

.quillEditorWrapper :global(.ql-editor) {
  min-height: 100%;
  font-size: 16px;
  line-height: 1.6;
}

.quillPreview {
  padding: 20px;
  max-width: 800px;
  margin: 0 auto;
  background-color: white;
  min-height: 100%;
  font-size: 16px;
  line-height: 1.6;
}

.modalFooter {
  padding: 15px 20px;
  border-top: 1px solid var(--tc-border-color);
  display: flex;
  justify-content: flex-end;
  gap: 10px;
  background-color: var(--tc-bg-light);
}