rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // ðŸš¨ RÃˆGLE PAR DÃ‰FAUT : TOUT INTERDIT SAUF EXCEPTIONS EXPLICITES
    match /{document=**} {
      allow read, write: if false;
    }
    
    // ðŸ¢ ORGANISATIONS : Gestion des organisations
    match /organizations/{orgId} {
      // Lecture autorisÃ©e si l'utilisateur est membre
      allow read: if request.auth != null && 
                    request.auth.uid in resource.data.members;
      
      // CrÃ©ation par n'importe quel utilisateur authentifiÃ©
      allow create: if request.auth != null &&
                      validateOrganizationData(request.resource.data) &&
                      request.resource.data.ownerId == request.auth.uid &&
                      request.auth.uid in request.resource.data.members &&
                      request.resource.data.members[request.auth.uid].role == 'owner';
      
      // Mise Ã  jour par les admins/propriÃ©taires uniquement
      allow update: if request.auth != null &&
                      request.auth.uid in resource.data.members &&
                      (resource.data.members[request.auth.uid].role == 'owner' ||
                       resource.data.members[request.auth.uid].role == 'admin') &&
                      validateOrganizationData(request.resource.data);
      
      // Suppression par le propriÃ©taire uniquement
      allow delete: if request.auth != null &&
                      request.auth.uid in resource.data.members &&
                      resource.data.members[request.auth.uid].role == 'owner';
      
      // âš™ï¸ PARAMÃˆTRES D'ORGANISATION : AccÃ¨s restreint aux membres
      match /settings/{settingDoc} {
        // Lecture autorisÃ©e pour tous les membres de l'organisation
        allow read: if request.auth != null && 
                      isOrgMember(orgId, request.auth.uid);
        
        // Ã‰criture autorisÃ©e selon le type de paramÃ¨tre
        allow write: if request.auth != null && 
                       isOrgMember(orgId, request.auth.uid) &&
                       canWriteSetting(settingDoc, orgId, request.auth.uid);
      }
      
      // ðŸ“Š MIGRATIONS : Lecture seule pour les admins, Ã©criture systÃ¨me uniquement
      match /migrations/{migrationDoc} {
        // Lecture par les admins pour vÃ©rifier l'Ã©tat des migrations
        allow read: if request.auth != null && 
                      isOrgAdmin(orgId, request.auth.uid);
        
        // Ã‰criture autorisÃ©e pour les processus de migration (admins uniquement)
        allow write: if request.auth != null && 
                       isOrgAdmin(orgId, request.auth.uid);
      }
      
      // ðŸ“„ TEMPLATES : AccÃ¨s aux membres, modification par admins
      match /templates/{templateDoc} {
        allow read: if request.auth != null && 
                      isOrgMember(orgId, request.auth.uid);
        
        allow write: if request.auth != null && 
                       isOrgAdmin(orgId, request.auth.uid);
      }
    }
    
    // ðŸ‘¥ INDEX UTILISATEUR-ORGANISATIONS
    match /user_organizations/{userId} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // [... Autres rÃ¨gles existantes ...]
  }
  
  // ðŸ›¡ï¸ FONCTIONS DE VALIDATION ET SÃ‰CURITÃ‰
  
  // VÃ©rifier si un utilisateur est membre d'une organisation
  function isOrgMember(orgId, uid) {
    return exists(/databases/$(database)/documents/organizations/$(orgId)) &&
           uid in get(/databases/$(database)/documents/organizations/$(orgId)).data.members;
  }
  
  // VÃ©rifier si un utilisateur est admin/owner d'une organisation
  function isOrgAdmin(orgId, uid) {
    return exists(/databases/$(database)/documents/organizations/$(orgId)) &&
           uid in get(/databases/$(database)/documents/organizations/$(orgId)).data.members &&
           get(/databases/$(database)/documents/organizations/$(orgId)).data.members[uid].role in ['owner', 'admin'];
  }
  
  // DÃ©terminer qui peut Ã©crire quel paramÃ¨tre
  function canWriteSetting(settingType, orgId, uid) {
    // ParamÃ¨tres critiques (entreprise, facturation) : admins uniquement
    return (settingType in ['entreprise', 'factureParameters', 'emailSettings'] && 
            isOrgAdmin(orgId, uid)) ||
           // ParamÃ¨tres gÃ©nÃ©raux : tous les membres
           (settingType in ['general', 'appearance', 'notifications'] && 
            isOrgMember(orgId, uid));
  }
  
  // Validation des donnÃ©es d'organisation
  function validateOrganizationData(data) {
    return data.keys().hasAll(['name', 'ownerId', 'members', 'createdAt', 'isActive']) &&
           data.name is string &&
           data.name.size() > 0 &&
           data.name.size() <= 100 &&
           data.ownerId is string &&
           data.members is map &&
           data.createdAt is timestamp &&
           data.isActive is bool;
  }
}