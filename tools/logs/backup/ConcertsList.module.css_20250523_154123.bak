/*
 * Styles pour ConcertsList
 * Standardisé selon le Guide de Style CSS de TourCraft
 * Date de création: Inconnue
 * Dernière mise à jour: 5 mai 2025
 */



/* Container principal */
.concertsMobileContainer {
  padding: var(--tc-spacing-3);
  background-color: var(--tc-bg-light);
  min-height: calc(100vh - 56px);
}

/* En-tête mobile */
.mobileHeader {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: var(--tc-spacing-3);
}

/* Conteneur de recherche */
.mobileSearchContainer {
  margin-bottom: var(--tc-spacing-3);
}

.clearSearchBtn {
  border-top-right-radius: 4px;
  border-bottom-right-radius: 4px;
}

/* Conteneur des filtres */
.mobileFiltersContainer {
  display: flex;
  flex-wrap: nowrap;
  overflow-x: auto;
  padding-bottom: var(--tc-spacing-2);
  margin-bottom: var(--tc-spacing-3);
  gap: var(--tc-spacing-1);
  -webkit-overflow-scrolling: touch;
}

.filterIcon {
  font-size: var(--tc-spacing-3);
}

/* Liste des concerts */
.concertsListMobile {
  display: flex;
  flex-direction: column;
  gap: var(--tc-spacing-3);
  margin-bottom: var(--tc-spacing-3);
}

/* Carte de concert */
.concertCard {
  display: flex;
  align-items: stretch;
  background-color: var(--tc-color-fff, #fff);
  border-radius: var(--tc-radius-md);
  box-shadow: 0 2px 4px var(--tc-color-rgba(0, 0, 0, 0.05), rgba(0, 0, 0, 0.05));
  overflow: hidden;
  cursor: pointer;
  transition: transform 0.2s ease, box-shadow 0.2s ease;
}

.concertCard:hover {
  transform: translateY(-2px);
  box-shadow: 0 4px 8px var(--tc-color-rgba(0, 0, 0, 0.1), rgba(0, 0, 0, 0.1));
}

/* Date du concert */
.concertCardDate {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background-color: var(--tc-primary-color);
  color: var(--tc-color-fff, #fff);
  padding: var(--tc-spacing-2);
  min-width: 60px;
  text-align: center;
}

.pastDate {
  background-color: var(--tc-color-text-secondary);
}

.dateDay {
  font-size: var(--tc-spacing-4);
  font-weight: var(--tc-font-weight-bold);
  line-height: 1;
}

.dateMonth {
  font-size: 0.875rem;
  font-weight: var(--tc-font-weight-medium);
  text-transform: uppercase;
}

.dateYear {
  font-size: var(--tc-spacing-2);
  opacity: 0.9;
}

/* Détails du concert */
.concertDetails {
  flex-grow: 1;
  padding: var(--tc-spacing-2);
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.concertCardTitle {
  font-size: var(--tc-spacing-3);
  font-weight: var(--tc-font-weight-semibold);
  margin-bottom: var(--tc-spacing-2);
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

/* Informations du concert */
.concertInfo {
  display: flex;
  flex-direction: column;
  gap: 0.375rem;
  margin-bottom: var(--tc-spacing-2);
}

.infoItem {
  display: flex;
  align-items: center;
  gap: var(--tc-spacing-2);
  font-size: 0.875rem;
  color: var(--tc-color-text-secondary);
}

.infoItem i {
  color: var(--tc-color-text-secondary);
  font-size: 0.875rem;
  width: 16px;
}

.concertVenueName {
  font-weight: var(--tc-font-weight-medium);
}

.concertVenueLocation {
  font-size: var(--tc-spacing-2);
  opacity: 0.8;
  margin-left: var(--tc-spacing-1);
}

.artistTag {
  background-color: var(--tc-bg-light);
  border-radius: var(--tc-radius-sm);
  padding: 0.125rem 0.375rem;
  font-size: var(--tc-spacing-2);
}

.montant {
  font-weight: var(--tc-font-weight-semibold);
}

/* Statut du concert */
.concertStatus {
  display: flex;
  align-items: center;
  margin-top: var(--tc-spacing-1);
}

.concertStatusBadge {
  border-radius: var(--tc-radius-sm);
  font-weight: var(--tc-font-weight-medium);
  font-size: var(--tc-spacing-2);
  padding: var(--tc-spacing-1) var(--tc-spacing-2);
}

/* Actions */
.concertActions {
  display: flex;
  flex-direction: column;
  border-left: 1px solid var(--tc-color-f0f0f0, #f0f0f0);
}

.actionBtn {
  display: flex;
  justify-content: center;
  align-items: center;
  color: var(--tc-color-text-secondary);
  padding: var(--tc-spacing-2);
  transition: background-color 0.2s ease;
  flex: 1;
}

.actionBtn:hover {
  background-color: var(--tc-bg-light);
}

.actionBtn.view {
  color: var(--tc-primary-color);
}

.actionBtn.edit {
  color: var(--tc-color-28a745, #28a745);
  border-top: 1px solid var(--tc-color-f0f0f0, #f0f0f0);
}

.concertActionButton {
  text-decoration: none;
}

/* États */
.emptyContainer {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  text-align: center;
  padding: var(--tc-spacing-8);
  color: var(--tc-color-text-secondary);
}

.emptyContainer i {
  font-size: 3rem;
  margin-bottom: var(--tc-spacing-3);
  opacity: 0.5;
}

.emptyContainer p {
  margin-bottom: var(--tc-spacing-4);
}

.errorContainer {
  background-color: var(--tc-color-f8d7da, #f8d7da);
  color: var(--tc-color-721c24, #721c24);
  padding: var(--tc-spacing-3);
  border-radius: var(--tc-radius-md);
  margin: var(--tc-spacing-4) 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
}

.errorContainer i {
  font-size: var(--tc-spacing-8);
  margin-bottom: var(--tc-spacing-3);
}

/* Responsive */
@media (max-width: 576px) {
  .concertCardTitle {
    font-size: var(--tc-font-size-sm);
  }
  
  .concertCardDate {
    min-width: 50px;
  }
  
  .dateDay {
    font-size: var(--tc-font-size-xl);
  }
  
  .infoItem {
    font-size: var(--tc-font-size-xs);
  }
}