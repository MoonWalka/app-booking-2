.deleteModal :global(.modal-content) {
  border-radius: 10px;
  overflow: hidden;
}

.modalTitle {
  font-size: 1.1rem;
  font-weight: 600;
}

.warningIcon {
  display: flex;
  justify-content: center;
  font-size: 3rem;
  color: #dc3545;
  margin-bottom: 1rem;
}

.confirmMessage {
  text-align: center;
  font-size: 0.95rem;
  line-height: 1.5;
}

.concertName {
  display: block;
  font-weight: 600;
  margin: 0.5rem 0;
}

.warningNote {
  color: #6c757d;
  display: block;
  margin-top: 0.5rem;
}

.modalFooter {
  display: flex;
  justify-content: space-between;
  border-top: 1px solid #dee2e6;
  padding: 0.75rem 1rem;
}

.cancelButton, .confirmButton {
  min-width: 100px;
  flex: 1;
  max-width: 45%;
}