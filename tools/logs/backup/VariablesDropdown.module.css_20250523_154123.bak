/*
 * Styles pour VariablesDropdown
 * Standardisé selon le Guide de Style CSS de TourCraft
 * Dernière mise à jour: 16 May 2025
 */

.container {
  position: relative;
  display: inline-block;
}

.variablesButton {
  background-color: var(--tc-color-f0f7ff, #f0f7ff);
  color: var(--tc-color-2563eb, #2563eb);
  border: 1px solid var(--tc-color-bfdbfe, #bfdbfe);
  border-radius: 4px;
  padding: 6px 12px;
  font-size: 0.85rem;
  display: flex;
  align-items: center;
  cursor: pointer;
  transition: all 0.2s;
}

.variablesButton:hover {
  background-color: var(--tc-color-dbeafe, #dbeafe);
  border-color: var(--tc-color-93c5fd, #93c5fd);
}

.dropdown {
  position: absolute;
  top: 100%;
  left: 0;
  z-index: 1000;
  min-width: 280px;
  max-width: 340px;
  max-height: 400px;
  background-color: white;
  border-radius: 6px;
  box-shadow: 0 4px 16px var(--tc-color-rgba(0, 0, 0, 0.1), rgba(0, 0, 0, 0.1));
  overflow: hidden;
  display: flex;
  flex-direction: column;
  margin-top: 4px;
  border: 1px solid var(--tc-color-e5e7eb, #e5e7eb);
}

.dropdownHeader {
  padding: 12px 16px;
  margin: 0;
  font-weight: 600;
  border-bottom: 1px solid var(--tc-color-f3f4f6, #f3f4f6);
  color: var(--tc-color-4b5563, #4b5563);
  background-color: var(--tc-color-f9fafb, #f9fafb);
  font-size: 0.9rem;
}

.variablesList {
  list-style-type: none;
  padding: 0;
  margin: 0;
  overflow-y: auto;
  max-height: 300px;
}

.variableItem {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 8px 16px;
  border: none;
  background: none;
  width: 100%;
  text-align: left;
  cursor: pointer;
  transition: background-color 0.15s;
  border-bottom: 1px solid var(--tc-color-f3f4f6, #f3f4f6);
}

.variableItem:hover {
  background-color: var(--tc-color-f3f4f6, #f3f4f6);
}

.variableLabel {
  color: var(--tc-color-4b5563, #4b5563);
  font-size: 0.85rem;
  margin-right: 10px;
}

.variableCode {
  color: var(--tc-color-6366f1, #6366f1);
  background-color: var(--tc-color-f3f4f6, #f3f4f6);
  padding: 2px 4px;
  border-radius: 4px;
  font-family: monospace;
  font-size: 0.8rem;
  white-space: nowrap;
}

.dropdownFooter {
  padding: 8px;
  text-align: center;
  background-color: var(--tc-color-f9fafb, #f9fafb);
  border-top: 1px solid var(--tc-color-f3f4f6, #f3f4f6);
}

.closeButton {
  padding: 5px 12px;
  background-color: var(--tc-color-f3f4f6, #f3f4f6);
  border: 1px solid var(--tc-color-e5e7eb, #e5e7eb);
  border-radius: 4px;
  color: var(--tc-color-4b5563, #4b5563);
  font-size: 0.85rem;
  cursor: pointer;
  transition: all 0.2s;
}

.closeButton:hover {
  background-color: var(--tc-color-e5e7eb, #e5e7eb);
}

@media (max-width: 768px) {
  .dropdown {
    min-width: 240px;
    max-width: 280px;
  }
}