/* Reset et styles de base */
*, ::before, ::after {
  box-sizing: border-box;
  margin: 0;
  padding: 0;
}

body {
  font-family: var(--tc-bs-body-font-family, 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif);
  font-size: var(--tc-font-size-base, var(--tc-spacing-3));
  font-weight: var(--tc-bs-body-font-weight, var(--tc-font-weight-normal));
  line-height: var(--tc-bs-body-line-height, 1.5);
  color: var(--tc-text-color, #212529);
  background-color: var(--tc-background-color, var(--tc-bg-light, #f8f9fa));
}

a {
  text-decoration: none;
  color: var(--tc-primary-color);
  transition: var(--tc-transition);
}

a:hover {
  color: var(--tc-primary-dark);
}